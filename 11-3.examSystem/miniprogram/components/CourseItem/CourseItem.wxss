/* components/CourseItem/CourseItem.wxss */
.course-item-container {
  width: 680rpx;
  padding: 20rpx;
  margin: 10rpx 0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  -webkit-box-shadow: 4rpx 4rpx 4rpx 2rpx rgba(100, 100, 100, 0.3);
  -moz-box-shadow: 4rpx 4rpx 4rpx 2rpx rgba(100, 100, 100, 0.3);
  box-shadow: 4rpx 4rpx 8rpx 4rpx rgba(100, 100, 100, 0.3);
}

.course-item-image {
  height: 200rpx;
  width: 300rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.course-item-info {
  height: 200rpx;
  color: #34495e;
  font-size: 32rpx;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-item-name {
  font-weight: 600;
  font-size: 40rpx;
  margin-top: 20rpx;
}

.van-ellipsis {
  margin-bottom: 20rpx;
}