/* components/CommentItem/CommentItem.wxss */
.comment {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.comment-title {
  display: flex;
  align-items: center;
}

.comment-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-nickname {
  flex: 1;
}

.comment-content {
  font-size: 32rpx;
  line-height: 1.4;
  font-weight: 400;
  padding: 10rpx 0;
  color: #666;
}

.comment-time {
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #939393;
}